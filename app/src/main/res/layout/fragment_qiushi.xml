<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.camnter.easyslidingtabs.widget.EasySlidingTabs xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bar_default_height"
        android:paddingTop="4dp"
        app:easyIndicatorColor="@color/easyIndicatorColor"
        app:easyIndicatorHeight="@dimen/easyIndicatorHeight"
        app:easySelectedTagTextColor="@color/easySelectedTagTextColor"
        app:easyTabTextColor="@color/easyTabTextColor"
        app:easyUnderlineColor="@color/easyUnderlineColor"
        app:easyUnderlineHeight="@dimen/easyUnderlineHeight" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>